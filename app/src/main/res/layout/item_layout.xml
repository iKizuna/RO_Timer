<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="37dp"
        android:text="Name"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/nameTextView"
        android:layout_marginEnd="54dp"
        android:text="Time"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/mapTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nameTextView"
        android:layout_alignTop="@+id/nameTextView"
        android:layout_marginTop="31dp"
        android:text="Map" />

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mapTextView"
        android:layout_below="@+id/mapTextView"
        android:text="Location" />

    <TextView
        android:id="@+id/maxTimeTextView"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/timerTextView"
        android:layout_alignParentEnd="true"
        android:text="Max Time" />

</RelativeLayout>